<%-include('../partials/navbar')%>
<%-include('../partials/header')%>
<%-include('../partials/flash.ejs')%>
<div class="container">
    <form action="/home/<%=product.id%>/edit?_method=PATCH" method="POST">
       <fieldset class="scheduler-border">
            <legend class="scheduler-border" >Edit Product:</legend>
            <br>
            <label for="name">Name : </label>
            <input type="text" name="name" id="name" value="<%=product.name%>">
            <br>
            <br>
            <label for="img">Image Url : </label>
            <input type="text" name="img" id="img" value="<%=product.img%>">
            <br>
            <br>
            <label for="desc">Description : </label>
            <input type="text" name="desc" id="desc" value="<%=product.desc%>">
            <br>
            <br>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
      </fieldset>
    </form>
</div>

<%-include('../partials/footer')%>