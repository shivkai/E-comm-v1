<%-include('../partials/navbar.ejs')%>
<%-include('../partials/header.ejs')%>
<main class="mt-3">
    <div class="container">
        <div  class="d-flex justify-content-center">

        <form action="/signup"  method="POST">
            <div class="row">
                <h2 class="text-center">SignUp</h2>

                <div class="col-lg-9 mx-auto">
                    <label for="username">Username: </label>
                    <input type="text" name="username" id="username" class="form-control" placeholder="Username">
                </div>
            </div>
           
                <div class="col-lg-9 mx-auto">
                    <label for="password">Password: </label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                 </div>
          
                <div class="col-lg-9 mx-auto"> 
                    <label for="email">E-mail: </label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="E-mail">
                </div>
                <div class="col-lg-9 mt-2 mb-3 mx-auto"> 
                    <label>Category: </label>
                    <input type="radio" id="users" name="category" value="user" checked>
                    <label for="users" name="users"> User</label>
                    <input type="radio" id="seller" name="category" value="seller" >
                    <label for="seller" name="seller"> Seller</label>
                </div>
            <button  type="submit" class="btn mb-2 btn-sm mt-2 mx-5 btn-outline-success">SignUp</button>
        </form>

        </div>
    </div>
</main>
<%-include('../partials/footer.ejs')%>